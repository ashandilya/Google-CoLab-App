<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/andada"
        android:text="Click below to Open Google Colab"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="normal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/colabCard"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        app:cardCornerRadius="5dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            app:srcCompat="@drawable/colab" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colabCard"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="suggestion"
                app:cardCornerRadius="55dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/suggest"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Suggestion"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/rate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="rate"
                app:cardCornerRadius="55dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="37dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/love" />
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Rate Us"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="share"
                app:cardCornerRadius="55dp">

                <ImageView
                    android:id="@+id/shareImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/share" />
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Share It"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/kudos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="kudos"
                app:cardCornerRadius="55dp">

                <ImageView
                    android:id="@+id/kudosImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/kudos" />
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Kudos"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>