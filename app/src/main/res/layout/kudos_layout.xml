<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:onClick="close"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        android:src="@drawable/ic_close_black_24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/close"
        app:cardBackgroundColor="#0A3D62"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="40dp">

            <ImageView
                android:id="@+id/loveImg"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/love"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/codeEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kudos for Code Editor"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#fff"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/teamSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Colaboratory Team"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/iconKudos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kudos for Icons"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/iconSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.flaticon.com"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textAlignment="textStart"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3202873213580151/8793551449">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


<!--    -->
</RelativeLayout>